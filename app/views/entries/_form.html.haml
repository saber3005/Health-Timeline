= form_for [@episode, @entry] do |f|
  -if @entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@entry.errors.count, "error")} prohibited this entry from being saved:"
      %ul
        - @entry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :description
    %br
    = f.text_field :description
  .field
    = f.label :notes
    %br
    = f.text_field :notes
  .actions
    = f.submit 'Save'
